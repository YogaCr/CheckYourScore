<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_marginHorizontal="24dp"
    android:layout_marginTop="24dp"
    tools:context="id.sch.smktelkom_mlg.afinal.xirpl3163238.checkyourscore.activity.BuatMapelActivity">

    <LinearLayout
        android:id="@+id/layoutBuatMapel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etBuatMapelNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Mapel" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etBuatMapelKelas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Kelas" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etBuatMapelKKM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:hint="Nilai KKM" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Ikon"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinnerIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foto Sampul"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnPilihGambar"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Pilih" />

        <ImageView
            android:id="@+id/ivSampul"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <Button
            android:id="@+id/btnBuatMapel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload" />
    </LinearLayout>
</ScrollView>
